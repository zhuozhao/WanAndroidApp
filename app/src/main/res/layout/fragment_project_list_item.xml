<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/list_item_spacing_half"
    android:paddingLeft="@dimen/list_item_spacing"
    android:paddingRight="@dimen/list_item_spacing"
    android:paddingTop="@dimen/list_item_spacing_half"
    android:descendantFocusability="blocksDescendants"
    android:clickable="true"
    android:gravity="center_vertical">
    <ImageView
        android:id="@+id/envelopePic"
        android:layout_width="60dp"
        android:layout_height="100dp"
        android:layout_marginRight="10dp"
        android:scaleType="fitXY"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="30dp"
            android:textSize="16sp"
            tools:text="WanAndroid Java 客户端" />

        <TextView
            android:id="@+id/desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:id="@+id/author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xx作者"
                android:textSize="10sp"
                android:background="@drawable/border_black_bg"/>
            <TextView
                android:id="@+id/publishTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="一天前"
                android:textSize="10sp"
               />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/collectImg"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="10dp"
                android:tint="@color/colorPrimary"
                app:srcCompat="@drawable/ic_favorite_black_24dp" />

            <TextView
                android:id="@+id/superChapterName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="常用控件 / Fragment"
                android:textSize="10sp"
                android:lines="1"
                android:visibility="gone"
                android:background="@drawable/border_black_bg"/>



        </LinearLayout>

    </LinearLayout>
    


</LinearLayout>


